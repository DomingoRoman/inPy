import pdb
from subprocess import call
import random

# lista de morfemas de género
# lista de morfemas de número
# bases léxicas susceptibles de morfemas de género y número

morfema_genero = ["a", "o"]
morfema_numero = ["", "s"]

sust_m_marca_genero_e = ["rinoceronte", "bisonte", "estudiante", "arte", "cine", "auge", "bate", "bebé",
						"bote", "café", "aceite"]

sust_m_sin_marca_genero_c = ["licor", "farol", "tazón", "camión", "azúcar", "huracán", "clavel", "atún",
                             "baúl", "caudal", "temor", "amor", "candor", "esternón", "afán", "imán", "axón",
                             "edén", "andén", "avión", "torreón", "abdomen", "algodón", "almidón" ]

sust_m_con_marca_o_genero = ["teléfono", "cuadro", "acueducto", "libro", "misterio", "plato", "tarjetero",
                           "barco", "triángulo", "ojo",  "piano",  "cuaderno", "ajo", "oro", "apio", "lirio"]

sust_0_base = ["gat", "bols", "amig", "compañer", "pes", "loc", "mosc", "alumn", "os", "niñ"]

sust_f_con_marca_a_genero = ["cadena", "pantera", "luna", "guitarra", "flauta","agua", "agenda","quimera",
                             "copa", "agua", "tarjeta", "mesa", "sacerdotiza", "corchetera", "ventana",
                             "taza",  "letra","duna", "silla", "pastilla", "vaca", "piedra", "boa", "estrella",
                            "culebra", "orbita"]

sust_f_sin_marca_genero = ["flor", "luz", "cal", "señal", "sal", "miel", "lombriz", "perdiz", "cruz", "hiel"]

sust_f_marca_genero_e = ["elipse", "techumbre", "costumbre", "base", "diástole", "sístole"]


# longitudes de cada lista
n_sust_m_marca_genero_e = len(sust_m_marca_genero_e)
n_sust_m_sin_marca_genero_c = len(sust_m_sin_marca_genero_c)
n_sust_m_con_marca_o_genero = len(sust_m_con_marca_o_genero)
n_sust_0_base =len(sust_0_base)
n_sust_f_con_marca_a_genero = len(sust_f_con_marca_a_genero)
n_sust_f_sin_marca_genero = len(sust_f_sin_marca_genero)
n_sust_f_marca_genero_e = len(sust_f_marca_genero_e)

print(n_sust_m_marca_genero_e)
print(n_sust_m_sin_marca_genero_c)
print(n_sust_m_con_marca_o_genero)
print(n_sust_0_base)
print(n_sust_f_con_marca_a_genero)
print(n_sust_f_sin_marca_genero)
print(n_sust_f_marca_genero_e)


select_categ = random.randint(1, 7)

if select_categ == 1:
	cat_preg = sust_m_marca_genero_e
	gen = "masculino"
if select_categ == 2:
	cat_preg = sust_m_sin_marca_genero_c
	gen = "masculino"
if select_categ == 3:
	cat_preg = sust_m_con_marca_o_genero
	gen = "masculino"
if select_categ == 4:
	cat_preg = sust_0_base
	genero = random.choice(morfema_genero)
	if genero == "a":
		gen = "femenino"
		genLitera ="a"
	else:
		gen = "masculino"
		genLitera ="o"
if select_categ == 5:
	cat_preg = sust_f_con_marca_a_genero
	gen = "femenino"
if select_categ == 6:
	cat_preg = sust_f_con_marca_a_genero
	gen = "femenino"
if select_categ == 7:
	cat_preg = sust_f_marca_genero_e
	gen = "femenino"

print(select_categ)
print("-----")
enunciado_01 = "Voy a contruir una palabra en género "
print(enunciado_01+gen + ":")

posible = random.choice(cat_preg)

if select_categ == 4:
	print(posible + genLitera)
else:
	print(posible)
